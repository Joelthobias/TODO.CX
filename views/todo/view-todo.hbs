<link rel="stylesheet" href="../stylesheets/todoview.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
<section class="container">
    <div class="row mt-5">
        <div class="col-md-7 leftdiv">
            <div class="logo mb-5">
                <img src="../images/group.svg" alt="">
            </div>
            <div class="add-todo mt-5 pt-5">
                <h1 class="text-center">TODO</h1>
                <div class="container mt-5 todo-text">
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                    Aliquet at eleifend feugiat vitae faucibus nibh dolor dui.
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                    Aliquet at eleifend feugiat vitae faucibus nibh dolor dui. 
                </div>
                <div class="form mt-5">
                    <form action="/add-todo" method="post">
                        <div class="inputs">
                            <input type="text" placeholder="Title" name="title" >
                            <input type="text" placeholder="Description" name="description" >
                            <input type="hidden" name="deleted" value=false>
                            <input type="hidden" name="fav" value=false>
                            <input type="hidden" name="completed" value=false>
                            <input type="hidden" id="Date" name="Date" value=" ">
                        </div>
                        <button type="submit">ADD</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-5 mt-5 container-fluid">
            <h3>TODO LIST</h3>
            <div class="row " style="min-height: 200px;">
                <div class="col-9"></div>
                <div class="col-3">
                    <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Filtered  By</a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/view-todo/completed">Completed</a></li>
                        <li><a class="dropdown-item" href="/view-todo/fav">Favourite</a></li>
                        <li><a class="dropdown-item" href="/view-todo/deleted">Deleted</a></li>
                        <li><a class="dropdown-item" href="/view-todos">All</a></li>
                        <li><hr class="dropdown-divider"></li>
                    </ul>

                </div>
            </div>
            {{#each response}}
            <div class="row todos p-2 ">
                <div class="col-10">
                    <h5>{{this.title}}</h5>
                    <h6>{{this.description}}</h6>
                </div>
                <div class="col-2  todo-more">
                    {{#if this.fav}}
                        <i onclick="window.location.href='/update-sts/fav/{{this.Date}}'" class="bi bi-star-fill justify-content-start text-warning"></i>
                    {{else}}
                        <i onclick="window.location.href='/update-sts/fav/{{this.Date}}'" class="bi bi-star-fill justify-content-start "></i>

                    {{/if}}
                    {{#if this.completed}}
                        <i onclick="window.location.href='/update-sts/completed/{{this.Date}}'" class="bi bi-check-circle-fill text-success"></i>
                    {{else}}
                        <i onclick="window.location.href='/update-sts/completed/{{this.Date}}'" class="bi bi-check-circle-fill"></i>
                    {{/if}}
                    <a class="nav-link " data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false"><img src="../images/more.svg" alt=""></a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/update-sts/completed/{{this.Date}}">Mark as Complete</a></li>
                        <li><a class="dropdown-item" href="/update-sts/fav/{{this.Date}}">Mark as Favourite</a></li>
                        <li><a class="dropdown-item" href="/update-sts/deleted/{{this.Date}}">Mark as Delete</a></li>
                        <li><hr class="dropdown-divider"></li>
                    </ul>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>
<script>
    const D=new Date()
    let dt=D.getTime()
    D.setTime(dt)
    
    document.getElementById("Date").value=dt
</script>